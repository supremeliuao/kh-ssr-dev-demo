{
  "include": ["client/*", "client/**/*", "tests"],
  "exclude": ["node_modules", "client/assets/"],
  "compilerOptions": {
    "baseUrl": ".", // 设置baseUrl告诉编译器到哪里去查找模块。 所有非相对模块导入都会被当做相对于baseUrl。
    "paths": { // 设置路径映射
      "@client/*":["client/*"]
    },
    "removeComments": false, // 不能移除注释webpackChunkName会失效
    "types": [ // 需要包含的模块，只有在这里列出的模块的声明文件才会被加载进来
      "node",
    ],
    "typeRoots": [
      "node_modules/@types" // 指定类型声明文件的查找路径
    ],
    "strict": true, // 以严格模式解析,相当启用noImplicitAny,noImplicitThis,alwaysStrict,strictNullChecks,strictFunctionTypes和strictPropertyInitialization
    "jsx": "preserve", // 在.tsx文件里支持JSX
    "jsxFactory": "h", // 使用的JSX工厂函数
    "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入
    "experimentalDecorators": true, // 启用装饰器
    "strictFunctionTypes": false, // 允许编译javascript文件
    "allowJs": true, // 运行编译js
    "module": "ESNext", // 采用的模块系统
    "target": "es5", // 编译输出目标 ES 版本
    "moduleResolution": "node", // 如何处理模块
    "noEmitOnError": true, // 源文件有错误，不输出编译结果
    "lib": ["dom", "es5", "es6", "es7", "es2015.promise"], // 指定要引入的库文件
    "sourceMap": true,
    "pretty": true,
    "downlevelIteration": true,
  }
}
